<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c196_pa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.C196_PA">
        <receiver
            android:name="UI.MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name="UI.CourseDetail"
            android:exported="false"
            android:label="Course Detail"
            android:parentActivityName="UI.CourseList"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="UI.CourseList"
            android:exported="false"
            android:label="Course List"
            android:parentActivityName="UI.MainActivity" />
        <activity
            android:name="UI.AddTerm"
            android:exported="false"
            android:label="Add Term"
            android:parentActivityName="UI.TermList" />
        <activity
            android:name="UI.TermDetail"
            android:exported="false"
            android:label="Term Detail"
            android:parentActivityName="UI.TermList" />
        <activity
            android:name="UI.TermList"
            android:exported="false"
            android:label="Term List"
            android:parentActivityName="UI.MainActivity" />
        <activity
            android:name="UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>